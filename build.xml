  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.gen:_apiguardian-api.classpath">
    <pathelement location="${basedir}/lib/apiguardian-api.jar"/>
  </path>
  
  <path id="library.gen:_dclare.classpath">
    <pathelement location="${basedir}/lib/dclare.jar"/>
  </path>
  
  <path id="library.gen:_immutable-collections.classpath">
    <pathelement location="${basedir}/lib/immutable-collections.jar"/>
  </path>
  
  <path id="library.gen:_junit-jupiter-api.classpath">
    <pathelement location="${basedir}/lib/junit-jupiter-api.jar"/>
  </path>
  
  <path id="library.gen:_junit-jupiter-engine.classpath">
    <pathelement location="${basedir}/lib/junit-jupiter-engine.jar"/>
  </path>
  
  <path id="library.gen:_junit-platform-commons.classpath">
    <pathelement location="${basedir}/lib/junit-platform-commons.jar"/>
  </path>
  
  <path id="library.gen:_junit-platform-engine.classpath">
    <pathelement location="${basedir}/lib/junit-platform-engine.jar"/>
  </path>
  
  <path id="library.gen:_junit-platform-launcher.classpath">
    <pathelement location="${basedir}/lib/junit-platform-launcher.jar"/>
  </path>
  
  <path id="library.gen:_opentest4j.classpath">
    <pathelement location="${basedir}/lib/opentest4j.jar"/>
  </path>
  
  <!-- Modules -->
  
  <import file="${basedir}/serviceBrainstorm/module_servicebrainstorm.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.servicebrainstorm" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.servicebrainstorm" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.servicebrainstorm-sources:jar" value="${basedir}/out/artifacts"/>
    <property name="artifact.output.servicebrainstorm:jar" value="${basedir}/out/artifacts"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.serviceBrainstorm-sources.jar" value="${artifacts.temp.dir}/serviceBrainstorm-sources.jar"/>
    <property name="temp.jar.path.serviceBrainstorm.jar" value="${artifacts.temp.dir}/serviceBrainstorm.jar"/>
  </target>
  
  <target name="artifact.servicebrainstorm-sources:jar" depends="init.artifacts" description="Build &#39;serviceBrainstorm-sources:jar&#39; artifact">
    <property name="artifact.temp.output.servicebrainstorm-sources:jar" value="${artifacts.temp.dir}/serviceBrainstorm_sources_jar"/>
    <mkdir dir="${artifact.temp.output.servicebrainstorm-sources:jar}"/>
    <jar destfile="${temp.jar.path.serviceBrainstorm-sources.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${basedir}/serviceBrainstorm/src"/>
      <zipfileset dir="${basedir}/serviceBrainstorm/tst"/>
    </jar>
    <copy file="${temp.jar.path.serviceBrainstorm-sources.jar}" tofile="${artifact.temp.output.servicebrainstorm-sources:jar}/serviceBrainstorm-sources.jar"/>
  </target>
  
  <target name="artifact.servicebrainstorm:jar" depends="init.artifacts, compile.module.servicebrainstorm" description="Build &#39;serviceBrainstorm:jar&#39; artifact">
    <property name="artifact.temp.output.servicebrainstorm:jar" value="${artifacts.temp.dir}/serviceBrainstorm_jar"/>
    <mkdir dir="${artifact.temp.output.servicebrainstorm:jar}"/>
    <jar destfile="${temp.jar.path.serviceBrainstorm.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/serviceBrainstorm/src/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${servicebrainstorm.output.dir}"/>
      <zipfileset src="${basedir}/lib/immutable-collections.jar"/>
      <zipfileset src="${basedir}/lib/dclare.jar"/>
    </jar>
    <copy file="${temp.jar.path.serviceBrainstorm.jar}" tofile="${artifact.temp.output.servicebrainstorm:jar}/serviceBrainstorm.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.servicebrainstorm-sources:jar, artifact.servicebrainstorm:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.servicebrainstorm-sources:jar}"/>
    <copy todir="${artifact.output.servicebrainstorm-sources:jar}">
      <fileset dir="${artifact.temp.output.servicebrainstorm-sources:jar}"/>
    </copy>
    <mkdir dir="${artifact.output.servicebrainstorm:jar}"/>
    <copy todir="${artifact.output.servicebrainstorm:jar}">
      <fileset dir="${artifact.temp.output.servicebrainstorm:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>